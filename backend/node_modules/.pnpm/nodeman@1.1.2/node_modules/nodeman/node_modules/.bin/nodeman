#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules/nodeman/bin/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules/nodeman/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules/nodeman/bin/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules/nodeman/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/nodeman@1.1.2/node_modules:/mnt/c/Users/Admin/my-expense-tracker/backend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir//bin/bash" ]; then
  exec "$basedir//bin/bash"  "$basedir/../../bin/nodeman" "$@"
else
  exec /bin/bash  "$basedir/../../bin/nodeman" "$@"
fi
